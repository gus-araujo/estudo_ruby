<div class="main" style="background-color: rgba(0,0,0,.02); padding: 12pt;">
<p id="notice"><%= notice %></p>

<h1><strong>Usuários</h1></strong>
<strong>
  <%= link_to 'Cadastrar novo usuário', new_user_path %>
<strong/>
<br><br>

<table>
  <thead>
    <tr>
      <th style="color: black;">Name</th>
      <th style="color: black;">Email</th>
      <th style="color: black;">Age</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.age %></td>
        <td><%= link_to 'Ver Mais', user %></td>
        <td><%= link_to 'Editar', edit_user_path(user) %></td>
        <td><%= link_to 'Excluir', user, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>